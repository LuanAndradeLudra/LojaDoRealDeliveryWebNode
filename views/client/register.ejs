<%- include("./partials/header"); %>
	<script type="text/javascript" src="/views/client/scripts/findCep.js"></script>
	<script>
		$(document).ready(function(){
			$('#phoneInput').mask('(00) 000000009');
			$('#cepInput').mask('00000-000');
		});
	  </script>
	<!--================Login Box Area =================-->
	<section style="margin-top: 40px !important; margin-bottom: 100px !important;">
		<div>
			<div class="col-lg-12">
				<div class="login_form_inner">
					<h3>Registre-se</h3>
					<form class="login_form" action="/register" method="POST">

						<% if (msg !=undefined) { %>
							<div class="alert alert-warning alert-dismissible">
								<button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
								<h5><i class="icon fas fa-info"></i> Alerta!</h5>
								<%= msg %>
							</div>
							<% } %>
								<div class="col-md-12 form-group">
									<input type="text" class="form-control" name="name" placeholder="Seu nome" required>
								</div>
								<div class="col-md-12 form-group">
									<input type="email" class="form-control" name="email" placeholder="Seu email"
										required>
								</div>
								<div class="col-md-12 form-group">
									<input type="text" class="form-control" name="phone" placeholder="Telefone"
										id="phoneInput" required>
								</div>
								<div class="col-md-12 form-group input-group-sm input-group">
									<input type="text" class="form-control" id="cepInput" placeholder="Cep" name="cep"
										required>
									<span class="input-group-append">
										<button type="button" style="border: none; width: 50px; cursor: pointer;" onclick="findCep()"><span class="lnr lnr-magnifier" id="search"></span></button>
									</span>
								</div>
								<div class="col-md-12 form-group">
									<input type="text" class="form-control" name="city" id="cityInput"
										placeholder="Cidade" readonly required>
								</div>
								<div class="col-md-12 form-group">
									<input type="text" class="form-control" name="district" id="districtInput"
										placeholder="Bairro" readonly required>
								</div>
								<div class="col-md-12 form-group">
									<input type="text" class="form-control" name="address" id="addressInput"
										placeholder="Endereço" readonly required>
								</div>
								<div class="col-md-12 form-group">
									<input type="text" class="form-control" name="number"
										placeholder="Número da residência" required>
								</div>
								<div class="col-md-12 form-group">
									<input type="password" class="form-control" minlength="8" name="password"
										placeholder="********" required>
								</div>
								<div class="col-md-12 form-group">
									<button type="submit" value="submit" class="primary-btn">Registre-se</button>
									<a href="/login">Login</a>
								</div>
					</form>
				</div>
			</div>
		</div>
	</section>
	<!--================End Login Box Area =================-->
	<%- include("./partials/footer"); %>