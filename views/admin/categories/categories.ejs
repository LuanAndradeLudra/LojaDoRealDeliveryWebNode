<%- include("../partials/header"); %>
  <%- include("../partials/navbar"); %>

    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <div class="content-header">
        <div class="container-fluid">
          <% if (msg !=undefined) { %>
            <div class="alert alert-info alert-dismissible">
              <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
              <h5><i class="icon fas fa-info"></i> Alerta!</h5>
              <%= msg %>
            </div>
            <% } %>
              <div class="row mb-2">
                <div class="col-sm-12">
                  <h1 class="m-0">Categorias</h1>
                </div><!-- /.col -->
              </div><!-- /.row -->
        </div><!-- /.container-fluid -->
      </div>
      <!-- /.content-header -->

      <!-- Main content -->
      <div class="content">
        <div class="container-fluid">

          <div class="card">

            <!-- /.card-header -->
            <div class="card-body">
              <table id="example1" class="table table-bordered table-striped">
                <thead>
                <tr>
                  <th class="col-2">Id</th>
                  <th class="col-7">Nome</th>
                  <th class="col-3">Ações</th>
                </tr>
                </thead>
                <tbody>
              <% categories.forEach((category) => { %>    
                <tr>
                  <td><%= category.id %></td>
                  <td><%= category.name %> </td>
                  <td>
                    <a style="float: left; margin-right: 8px;" href="/admin/categories/edit/<%= category.id %>" class="btn btn-sm btn-primary"><i class="fas fa-pencil-alt"></i></a>
                    <form method="POST" action="/admin/categories/delete" onsubmit="return confirm('Deseja realmente deletar a categoria <%= category.name %>')">
                      <input type="text" value="<%= category.id %>" name="id" readonly required hidden>
                      <button type="submit" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></input>
                    </form>
                  </td>
                </tr>
              <% }); %>
                </tbody>
                <tfoot>
                <tr>
                  <th>Id</th>
                  <th>Nome</th>
                  <th>Ações</th>
                </tr>
                </tfoot>
              </table>
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->

        </div>
      </div>
      <!-- /.container-fluid -->
    </div>
    <!-- /.content -->

<%- include("../partials/footer"); %>